<?php
use Drupal\Core\Config\ConfigFactoryInterface;
use Symfony\Component\HttpFoundation\Response;

/**
 * @file
 * Primary module hooks for QE 410 module.
 */

/**
 * Implements hook_preprocess_html().
 */
function qe_410_preprocess_html(array &$variables) {
  $config = \Drupal::config('qe_410.settings');
  $fields = $config->get('fields') ?? [];
  $path = \Drupal::service('path.current')->getPath();
  if (in_array($path, $fields)) {
    $response = new Response(
      '<h1>Page Permanently Deleted</h1><p>The content you are looking for has been permanently removed.</p>',
      410,
      ['Content-Type' => 'text/html']
    );
    $response->send();
    exit();
  }
}
